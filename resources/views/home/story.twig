<script type='text/javascript'>
    var googletag = googletag || {};
    googletag.cmd = googletag.cmd || [];
    (function () {
        var gads = document.createElement('script');
        gads.async = true;
        gads.type = 'text/javascript';
        var useSSL = 'https:' == document.location.protocol;
        gads.src = (useSSL ? 'https:' : 'http:') +
                '//www.googletagservices.com/tag/js/gpt.js';
        var node = document.getElementsByTagName('script')[0];
        node.parentNode.insertBefore(gads, node);
    })();
</script>

<script type='text/javascript'>
    googletag.cmd.push(function () {
        googletag.defineSlot('/60988533/CLMTDESK_Story_300x250_01', [300, 250], 'div-gpt-ad-1467975359177-0').addService(googletag.pubads());
        googletag.defineSlot('/60988533/CLMTDESK_Story_Banner_01', [[728, 90], [320, 50]], 'div-gpt-ad-1467975359177-1').addService(googletag.pubads());
        googletag.pubads().enableSingleRequest();
        googletag.pubads().collapseEmptyDivs();
        googletag.enableServices();
    });


</script>
<div class="content top story-view" data-story-content-id="{{ storyData['id'] }}" data-story-version-id="{{ storyData['story-version-id'] }}"><!-- content open-->
    <div class="story_hero">
    {% if storyData['hero-image-caption'] %}
        <div class="story_hero__text">
            {{storyData['hero-image-caption'] | raw}}
        </div>
    {% endif %}
        <figure>

            <img src="{{focusedImageUrl(storyData['hero-image-s3-key'],config['image-cdn'], [16,9], storyData['hero-image-metadata'], {w: 800})}}" class="story-img"/>

        </figure>

    </div>
      <div class="sourcefrom">
        {{ storyData["hero-image-attribution"] | raw }}
    </div>



    <div class="story_container">

<div class="storysectionname"><span class="article__tag-heading">{{storyData["sections"][0]["name"]}}</span></div>
        <!-- Stoy Header Close -->
        <h1>{{storyData["headline"]}}</h1>

         {% if storyData["subheadline"] %}  
         <div class='story-element-subtitle'><span> {{storyData["subheadline"] | striptags |raw }}  </span></div>
      {% endif %}  
         

        <div class="textbottom__article storybyline">
         {%  if storyData['metadata']['story-attributes']['partnerpublisher'][0] %}
                        <div class="imagesds">
                                        <img src="{{  get_logo(storyData['metadata']['story-attributes']['partnerpublisher'][0], 'Logo' ) }}" /> 
                                    </div>                           
                        {% endif %}

            <span class="textbottom__article__name">{{ storyData["author-name"] }}</span>



               {% if storyData["first-published-at"] %}
            <span class="textbottom__article--share"> <time>

            {% set timestamp = (storyData["first-published-at"]// 1000)|round(0, 'floor') %}{{ timestamp|date('M j, Y') }}

             </time></span>
         {% endif %}
            {% include "story/elements/socialshare" %}
        </div>

      

<div class="publisher_info">
         {%  if storyData['metadata']['story-attributes']['partnerpublisher'][0] and storyData['metadata']['reference-url'] %}
 <!-- {%  if storyData['metadata']['story-attributes'] %}
                        <div class="imagesd storypartner">
                                        <img src="{{  get_logo(storyData['metadata']['story-attributes']['partnerpublisher'][0], 'Logo' ) }}" /> 
                                    </div>                           
                        {% endif %}
 -->
             <div class='story-element-publisher'>
                        

             This story was <a target="_blank" href="{{  storyData['metadata']['reference-url'] }}">originally published</a> by {{ get_logo(storyData['metadata']['story-attributes']['partnerpublisher'][0], 'Partnername' ) }}.</div> 

            {% endif %}

            </div>


        {% for card in storyData['cards'] %}
            {% include "story/story_elements" with {'storyElements': card['story-elements'], 'card': card} %}
        {% endfor %}

        <div class='author'>
            <div class='author__left'>

  {%  if authordata['avatar-url'] %}
<img  src="{{ authordata['avatar-url'] }} "/>
{% else %}

<img src="{{ assetPath('main/default_author.svg') }}"/>
  {%  endif %}
            </div>
            <div class='author__right'>
                <h5> {{authordata['name']}} </h5>
                <p>{{authorbio}}</p>
            </div>
        </div>


        {% include "story/story_tags" with {'storyTags': storyData["tags"]} %}


        <div class="ad_big" placeholder="Advertisement">
            <!-- /60988533/CLMTDESK_Story_Banner_01 -->
            <div id='div-gpt-ad-1467975359177-1'>
                <script type='text/javascript'>
                    googletag.cmd.push(function () {
                        googletag.display('div-gpt-ad-1467975359177-1');
                    });
                </script>
            </div>

        </div>

        <div class="ad_mobile" placeholder="Advertisement">
            <!-- /60988533/CLMTDESK_Story_300x250_01 -->
            <div id='div-gpt-ad-1467975359177-0' style='height:250px; width:300px;'>
                <script type='text/javascript'>
                    googletag.cmd.push(function () {
                        googletag.display('div-gpt-ad-1467975359177-0');
                    });
                </script>
            </div>


        </div>

        <div class="storyad">
          <a  href="/section/inquiring-minds">  <img  src="{{ assetPath('main/ad.png') }}" /> </a>
        </div>


    </div><!-- Stoy Container Close -->

<div class="content storybottom">
    <section > <!--  Section 5 open-->
        <div class="sectionwrap">

            <div class="sectiontitle left"><span> MORE FROM {{storyData["sections"][0]["name"]}}</span></div>
            {% for story in relatedstories|slice(0,3) %}
                <article ><!--  Article1 open-->
                   <div class="wrap border">
                    <div class="figcontainer">
                        <figure>
                            <a href="/{{ story['slug'] }}"> <img
                                        src="{{ focusedImageUrl(story['hero-image-s3-key'],config['image-cdn'], [16,9], story['hero-image-metadata'], {w:400}) }}"/>
                            </a>
                        </figure>
                        <div class="sourcefrom">{{ story["hero-image-attribution"] | raw}}</div>
                    </div>
                   <div class="textwrap">

                            <div class="article__title">
                               <a href="/{{ story['slug'] }}">  {{  shorthead(story["headline"]) }}</a>
                            </div>
                            <div class="article__desciption">
                                {{ shortsummary(story["summary"])  }}
                            </div>
 </div><!-- textwrap close -->
                            <div class="textbottom">


                                 {%  if story['metadata']['story-attributes']['partnerpublisher'][0] %}
                                    <div class="imagesd">
                                        <img src="{{  get_logo(story['metadata']['story-attributes']['partnerpublisher'][0], 'Logo' ) }}" />
                                    </div>
                                {% endif %}
                                <span ><h5 class="textbottom__article__name">{{story["author-name"]}} </h5></span>
                              {% if story["first-published-at"] %}
                                <span class="textbottom__article"> <time datetime="">{% set timestamp = (story["first-published-at"] / 1000)|round(0, 'floor') %}{{timestamp|date('d M, Y')}}</time></span>
                                {% endif %}
                            </div> <!-- textbottom close -->

                    </div>
                </article>
            {% endfor %}


        </div>
	<div id="youtube-iframe-api"></div>
    </section><!--  Section 5 close-->
    <script>
       qtReady.push(function() {
	 app.videos.setupYoutubeVideo();
	 app.videos.loadYoutubeLibrary();
	 app.analytics.setup();
       })
    </script>
    </div>
