{% for story in stories %}
  <div class="wrap">
    <div class="article_list_left ">
      <a href="/{{story['slug']}}">
        <figure>
            <img src="{{focusedImageUrl(story['hero-image-s3-key'] ,config['image-cdn'], [9,5], story['hero-image-metadata'],{w:400} )}}" />
        </figure>
        <div class="sourcetop">{{ story['hero-image-attribution'] | raw }}</div>
      </a>
    </div>
    <div class="article_right ">
        <a href="/{{story['slug']}}">
          <div class="article__title">{{shorthead(story['headline'])}}</div>
        </a>
        <div class="article__desciption">
              <a href="/author/{{story['author-id']}}">
                  by {{story['author-name']}}
              </a>
              <time>on {{ (story['first-published-at'] // 1000)|date('M d, Y')}}</time>
        </div>
    </div>
  </div>
{% endfor %}
